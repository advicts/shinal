<odoo>
    <data>

        <record id="inherit_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.view.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="is_internal_transfer" position="after">
                    <field name="is_intercompany_transfer" attrs="{'readonly': ['|',('state', '!=', 'draft'), ('is_internal_transfer','=',True)]}"/>
                </field>

                <xpath expr="//field[@name='is_internal_transfer']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('state', '!=', 'draft'), ('is_intercompany_transfer','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id'][1]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|','|',('show_partner_bank_account', '=', False), ('partner_type','!=','customer'), ('is_internal_transfer', '=', True), ('is_intercompany_transfer','=',True), ('payment_type', '=', 'inbound')], 'required': [('require_partner_bank_account', '=', True), ('is_internal_transfer', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id'][2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|','|',('show_partner_bank_account', '=', False), ('partner_type','!=','supplier'), ('is_internal_transfer', '=', True), ('is_intercompany_transfer','=',True), ('payment_type', '=', 'inbound')], 'required': [('require_partner_bank_account', '=', True), ('is_internal_transfer', '=', False)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_bank_id'][3]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|',('show_partner_bank_account', '=', False), ('is_internal_transfer', '=', True), ('is_intercompany_transfer','=',True), ('payment_type', '=', 'outbound')],'required': [('require_partner_bank_account', '=', True), ('is_internal_transfer', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="res_company_view_form_inherit" model="ir.ui.view">
            <field name="name">res.company.view.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='favicon']" position="after">
                    <field name="journal_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
