<odoo>
    <data>
        <!-- Inherit the form view of the res.partner model -->
        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Add the buttons or icons to open the phone number and mobile number in WhatsApp beside the phone number and mobile number fields -->
                <xpath expr="//field[@name='phone']" position="after">
                    <!-- Button to open phone in WhatsApp -->
                    <button name="open_whatsapp_phone" type="object" string="Open in WhatsApp" icon="fa-whatsapp"/>
                </xpath>
                <xpath expr="//field[@name='mobile']" position="after">
                    <!-- Button to open mobile in WhatsApp -->
                    <button name="open_whatsapp_mobile" type="object" string="Open in WhatsApp" icon="fa-whatsapp"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
