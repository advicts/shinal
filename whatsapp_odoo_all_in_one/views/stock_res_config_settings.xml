<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='operations_setting_container']" position="after">
                    <div id="whatsapp_conf_stock">
                        <h2>WhatsApp Message Configuration</h2>
                        <div class="row mt16 o_settings_container" id="whatsapp_message_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="st_append_signature"
                                 title="Add signature at the end of WhatsApp message">
                                <div class="o_setting_left_pane">
                                    <field name="st_append_signature"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="st_append_signature"/>
                                    <div class="text-muted">
                                        Append Signature in the Whatsapp Message
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="st_chatter_log">
                                <div class="o_setting_left_pane">
                                    <field name="st_chatter_log"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="st_chatter_log"/>
                                    <div class="text-muted">
                                        Log the messages in the chatter
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="st_attachment">
                                <div class="o_setting_left_pane">
                                    <field name="st_attachment"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="st_attachment"/>
                                    <div class="text-muted">
                                        Attach PDF Document
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="st_message_type">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="st_message_type"/>
                                    <field name="st_message_type"/>
                                    <div class="text-muted" attrs="{'invisible': [('st_message_type', '!=', 'short')]}">
                                        Include Details in Message
                                    </div>
                                    <div class="text-muted" attrs="{'invisible': [('st_message_type', '!=', 'detail')]}">
                                        Include All the Details in Message
                                    </div>
                                    <group attrs="{'invisible': [('st_message_type', '!=', 'short')]}">
                                        <div>
                                            <label for="st_include_product_details"/>
                                            <field name="st_include_product_details"/>
                                        </div>
                                        <div>
                                            <label for="st_include_shipping_policy"/>
                                            <field name="st_include_shipping_policy"/>
                                        </div>
                                        <div>
                                            <label for="st_include_scheduled_date"/>
                                            <field name="st_include_scheduled_date"/>
                                        </div>
                                         <div>
                                            <label for="st_include_date_done"/>
                                            <field name="st_include_date_done"/>
                                        </div>
                                    </group>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>