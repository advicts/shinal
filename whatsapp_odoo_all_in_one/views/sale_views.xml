<odoo>
    <data>
        <record id="view_whatsapp_integration_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.whatsapp integration.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[last()]" position="after">
                    <button name="send_whatsapp_msg"
                            string="Send by WhatsApp"
                            type="object"
                            class="oe_highlight"
                            icon="fa-whatsapp"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>