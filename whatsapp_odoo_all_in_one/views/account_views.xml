<odoo>
    <data>
        <record id="view_whatsapp_integration_invoice_form" model="ir.ui.view">
            <field name="name">account.move.whatsapp integration.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[last()]" position="after">
                    <button name="send_whatsapp_msg"
                            string="Send by WhatsApp"
                            type="object"
                            class="oe_highlight"
                            icon="fa-whatsapp"
                            attrs="{'invisible':[('state', '!=', 'posted')]}"
                    />
                </xpath>
            </field>
        </record>

        <record id="view_whatsapp_integration_account_payment" model="ir.ui.view">
            <field name="name">account.payment.whatsapp integration.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[last()]" position="after">
                    <button name="send_whatsapp_msg"
                            string="Send by WhatsApp"
                            type="object"
                            class="oe_highlight"
                            icon="fa-whatsapp"
                            attrs="{'invisible':[('state', '!=', 'posted')]}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>