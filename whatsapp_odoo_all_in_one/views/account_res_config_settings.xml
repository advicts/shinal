<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_account" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                    <div>
                        <h2>WhatsApp Message Configuration</h2>
                        <div class="row mt16 o_settings_container" id="whatsapp_message_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="append_signature"
                                 title="Add signature at the end of WhatsApp message">
                                <div class="o_setting_left_pane">
                                    <field name="ac_append_signature"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ac_append_signature"/>
                                    <div class="text-muted">
                                        Append Signature in the Whatsapp Message
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="chatter_log">
                                <div class="o_setting_left_pane">
                                    <field name="ac_chatter_log"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ac_chatter_log"/>
                                    <div class="text-muted">
                                        Log the messages in the chatter
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="attachment">
                                <div class="o_setting_left_pane">
                                    <field name="ac_attachment"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ac_attachment"/>
                                    <div class="text-muted">
                                        Attach PDF Document
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="message_type">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ac_message_type"/>
                                    <field name="ac_message_type"/>
                                    <div class="text-muted" attrs="{'invisible': [('ac_message_type', '!=', 'short')]}">
                                        Include Details in Message
                                    </div>
                                    <div class="text-muted" attrs="{'invisible': [('ac_message_type', '!=', 'detail')]}">
                                        Include All the Details in Message
                                    </div>
                                    <group attrs="{'invisible': [('ac_message_type', '!=', 'short')]}">
                                        <div>
                                            <label for="ac_include_product_details"/>
                                            <field name="ac_include_product_details"/>
                                        </div>
                                        <div>
                                            <label for="ac_include_payment_terms"/>
                                            <field name="ac_include_payment_terms"/>
                                        </div>
                                        <div>
                                            <label for="ac_include_invoice_date"/>
                                            <field name="ac_include_invoice_date"/>
                                        </div>
                                        <div>
                                            <label for="ac_include_total_details"/>
                                            <field name="ac_include_total_details"/>
                                        </div>
                                    </group>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>